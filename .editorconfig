# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2

# HTML/CSS files
[*.{html,css,scss,sass,less}]
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# Dockerfile
[Dockerfile*]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# Markdown files
[*.{md,markdown}]
trim_trailing_whitespace = false
indent_size = 2

# Configuration files
[*.{ini,toml,cfg}]
indent_size = 4

# Git files
[.git*]
indent_size = 2

# Docker Compose
[docker-compose*.{yml,yaml}]
indent_size = 2

# Environment files
[.env*]
indent_size = 4

# Requirements files
[requirements*.txt]
indent_size = 4

# Setup files
[setup.{py,cfg}]
indent_size = 4

# CI/CD files
[.{github,gitlab-ci}/**/*.{yml,yaml}]
indent_size = 2

# Kubernetes files
[k8s/**/*.{yml,yaml}]
indent_size = 2

# Ignore files
[*.{pyc,pyo,pyd,so,egg,egg-info}]
indent_size = unset
indent_style = unset

# Binary files
[*.{png,jpg,jpeg,gif,ico,pdf,doc,docx}]
indent_size = unset
indent_style = unset