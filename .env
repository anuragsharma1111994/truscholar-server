# Application Settings
APP_NAME=truscholar
APP_VERSION=1.0.0
APP_ENV=development
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000

# API Settings
API_V1_PREFIX=/api/v1
API_TIMEOUT=30
API_RATE_LIMIT=100
API_RATE_LIMIT_PERIOD=3600

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30
ALLOWED_HOSTS=["localhost","127.0.0.1"]
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=truscholar
MONGODB_MAX_POOL_SIZE=50
MONGODB_MIN_POOL_SIZE=10
MONGODB_MAX_IDLE_TIME_MS=10000
MONGODB_CONNECT_TIMEOUT_MS=10000

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=100
REDIS_DECODE_RESPONSES=true
REDIS_HEALTH_CHECK_INTERVAL=30

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=["json"]
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true
CELERY_TASK_TRACK_STARTED=true
CELERY_TASK_TIME_LIMIT=300
CELERY_TASK_SOFT_TIME_LIMIT=240

# LLM Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=60
OPENAI_MAX_RETRIES=3

ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-opus
ANTHROPIC_MAX_TOKENS=2000

GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_MODEL=gemini-pro

# LLM Fallback Configuration
LLM_PRIMARY_PROVIDER=openai
LLM_FALLBACK_PROVIDERS=["anthropic","google","static"]
LLM_RETRY_DELAY=2
LLM_RETRY_MAX_DELAY=60

# Feature Flags
ENABLE_CACHE=true
ENABLE_RATE_LIMITING=true
ENABLE_API_DOCS=true
ENABLE_METRICS=true
ENABLE_TRACING=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=logs/app.log
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_BACKUP_COUNT=5

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0

# External Services
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@truscholar.com
SMTP_USE_TLS=true

# Test Configuration
TEST_MODE=false
TEST_DATABASE_URL=mongodb://localhost:27017/truscholar_test
TEST_REDIS_URL=redis://localhost:6379/15

# Business Logic Configuration
MIN_USER_AGE=13
MAX_USER_AGE=99
TEST_QUESTION_COUNT=12
RAISEC_CODE_LENGTH=3
CAREER_RECOMMENDATION_COUNT=3
TEST_TIMEOUT_MINUTES=60
REPORT_CACHE_TTL_HOURS=24

# File Storage
UPLOAD_MAX_SIZE_MB=10
ALLOWED_UPLOAD_EXTENSIONS=["pdf","doc","docx","txt"]
STATIC_FILES_PATH=./static
TEMP_FILES_PATH=./temp

# Admin Configuration
ADMIN_EMAIL=admin@truscholar.com
ADMIN_DASHBOARD_ENABLED=false
ADMIN_API_KEY=your-admin-api-key-here